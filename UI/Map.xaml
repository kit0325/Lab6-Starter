<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
    xmlns:sensors="clr-namespace:Microsoft.Maui.Devices.Sensors;assembly=Microsoft.Maui.Essentials"
    xmlns:local="clr-namespace:Lab6_Starter"
    xmlns:model="clr-namespace:Lab6_Starter.Model"
    x:Class="Lab6_Starter.Map"
    Title="Map">

    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="logout.png" Text="Logout" Clicked="Logout_Clicked"/>
    </ContentPage.ToolbarItems>

    <maps:Map x:Name="map">
        <x:Arguments>
            <MapSpan>
                <x:Arguments>
                    <sensors:Location>
                        <x:Arguments>
                            <x:Double>44.67718</x:Double>
                            <x:Double>-89.62513</x:Double>
                        </x:Arguments>
                    </sensors:Location>
                    <x:Double>7.0</x:Double>
                    <x:Double>7.0</x:Double>
                </x:Arguments>
            </MapSpan>
        </x:Arguments>


    </maps:Map>
</ContentPage>